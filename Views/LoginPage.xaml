<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AceMicEV.Views.LoginPage"
             Title="LoginPage"       
             Shell.NavBarIsVisible="false"
            NavigationPage.HasNavigationBar="False">
    <StackLayout  Style="{StaticResource lblScr}">
        <Frame Style="{StaticResource lblProScr}">
            <Label Style="{StaticResource lblWel}" Text="Welcome Back!"></Label>
        </Frame>
        
        <Label Text="Enter Your details to get sign in to your account" FontSize="18" Margin="10,30,40,0" />
        
        <StackLayout Style="{StaticResource lblline2}" Margin="5,5,20,0">
            <StackLayout>
                <Label Text="E-mail / Phone Number" FontSize="18"/>
            </StackLayout>
            <StackLayout>
                <Entry x:Name="txtUserID" Style="{StaticResource lblemail3}"/>
            </StackLayout>
        </StackLayout>

        <StackLayout>
            <Label Text="Password" FontSize="18" Margin="10" />
        </StackLayout>
        <StackLayout>
            <Entry x:Name="txtPassword" Style="{StaticResource lblPass3}"/>
        </StackLayout>
        <StackLayout>
            <Button Style="{StaticResource lblbtn3}" Text="Login" CornerRadius="10" HorizontalOptions="Center" VerticalOptions="Center" Clicked="LogIn_Clicked"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage> 