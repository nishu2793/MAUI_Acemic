<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AceMicEV.Views.ForgotVeriOtp"
             Title="ForgotVeriOtp">
    <StackLayout Style="{StaticResource lblScr}">
        
        <StackLayout>
            <Label Style="{StaticResource lblForVeriOTP}"/>
            <Label Style="{StaticResource lblForVeriOTP1}"/>
        </StackLayout>
        
        <StackLayout Style="{StaticResource lblOtpline}">

            <Entry x:Name="entry5" Style="{StaticResource lblotp1}" Keyboard="Numeric" MaxLength="1" TextChanged="textChangeentry5"/>
            <Entry x:Name="entry6" Style="{StaticResource lblotp1}" Keyboard="Numeric" MaxLength="1" TextChanged="textChangeentry6"/>
            <Entry x:Name="entry7" Style="{StaticResource lblotp1}" Keyboard="Numeric" MaxLength="1" TextChanged="textChangeentry7"/>
            <Entry x:Name="entry8" Style="{StaticResource lblotp1}" Keyboard="Numeric" MaxLength="1" TextChanged="textChangeentry8"/>
            
        </StackLayout>

        <StackLayout>
            <Label Style="{StaticResource lbltext}" Text="Didn't receive OTP? Retry in 00.15 "/>
        </StackLayout>

        <StackLayout>
            <Button x:Name="Verify2" Style="{StaticResource lblbtn2}" Text="Verify" CornerRadius="12" Clicked="ForVeriOtpBtn_Clicked"/>
        </StackLayout>
        
    </StackLayout>
</ContentPage>