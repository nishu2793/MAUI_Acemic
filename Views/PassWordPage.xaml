<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AceMicEV.Views.PassWordPage"
             Title="PassWordPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout Style="{StaticResource lblScr}">

        <Image Style="{StaticResource lblPassimage}"  Source="v1_140.png"/>
        <Label Style="{StaticResource lblHeader3}" Text="Create Password"/>

        <Entry x:Name="Password" Style="{StaticResource lblPass}" Placeholder="  Password"/>
        <Entry x:Name="ConfirmPassword" Style="{StaticResource lblPass}" Placeholder="  Confirm Password"/>

        <StackLayout>
            <Button Style="{StaticResource lblbtn2}" Text="Submit" CornerRadius="12" Margin="60" Clicked="PassSubmit_Clicked"/>
        </StackLayout>

    </StackLayout>
</ContentPage>