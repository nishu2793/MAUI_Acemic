<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tookit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AceMicEV.Views.ConfiPage"
             Title="ConfiPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Style="{StaticResource lblScr}" MinimumHeightRequest="250" MinimumWidthRequest="300">

        <WebView x:Name="webView"                 
                 WidthRequest="320" HeightRequest="630" Margin="0,10,20,0"/>


        <Button x:Name="btnexit"  Margin="20" Text="Exit" Clicked="WebClicked" WidthRequest="60" HeightRequest="35" BackgroundColor="#00BF81" IsVisible="False"/>

        <Label
                x:Name="lblChat"
               
                FontSize="18"
                HorizontalOptions="StartAndExpand"
                TextType="Html"></Label>

        <Button Text="Delete" x:Name="btndele" Clicked="deleteClicked" WidthRequest="70" HeightRequest="35" BackgroundColor="#00BF81"/>

    </StackLayout>
</ContentPage>