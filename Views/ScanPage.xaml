<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gv="clr-namespace:BarcodeScanner.Mobile.Maui;assembly=BarcodeScanner.Mobile.Maui"
             x:Class="AceMicEV.ScanPage"
             FlowDirection="LeftToRight"
             Title="ScanPage"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
      
        <gv:CameraView HorizontalOptions="Center" VerticalOptions="Center" OnDetected="CameraView_OnDetected" Grid.Row="1"  HeightRequest="300" WidthRequest="300" Margin="0,150,0,0"
                           TorchOn="False" VibrationOnDetected="False" ScanInterval="50" x:Name="Camera"/>

    </VerticalStackLayout>
</ContentPage>