<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AceMicEV.Views.FirstScreenView"
            xmlns:viewModels="clr-namespace:AceMicEV.ViewModels"
            xmlns:models="clr-namespace:AceMicEV.Models"
             x:DataType="viewModels:FirstScreenViewModel"
             Title="FirstScreenView"
             Shell.NavBarIsVisible="False">
    <ScrollView>
    <StackLayout>
        <CarouselView ItemsSource="{Binding FirstScreens}">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="models:FirstScreenModel">
                    <Grid>
                        <Image Source="{Binding FirstScreenImage}"></Image>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        
    </StackLayout>
    </ScrollView>
</ContentPage>